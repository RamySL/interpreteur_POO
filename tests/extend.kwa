
var paire p,pt;
var triple t;


class paire {
  attribute int x,y;

  method void constructor(int x, int y) {
    this.x = x;
    this.y = y;
  }

  method int somme() {
    return this.x + this.y;
  }
}

class triple extends paire {
  attribute int z;

  method void constructor(int x, int y, int z) {
    this.x = x;
    this.y = y;
    this.z = z;
  }

  method int somme() {
    return this.x + this.y + this.z;
  }

  method int produit() {
    return this.x * this.y * this.z;
  }
}

class autre extends paire {

}

main {
  p = new autre; // doit pas lever d'erreur car fils
  //t = new autre; // doit lever une erreur

  p = new paire(1, 2);
  t = new triple(3, 4, 5);
  print(p.somme());
  print(t.somme());
  print(t.produit());
  pt = new triple(1, 2,3);
  print(pt.somme());
  // affiche 3, puis 12, puis 60, puis 6.
}
